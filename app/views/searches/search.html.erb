<h2>Result index</h2>
<table class="table">
  <% if @range == "User" %>

      <thead>
        <tr>
          <th></th>
          <th>name</th>
          <th>introduction</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= link_to user.name,user, class: "user_#{user.id}" %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>


  <% else %>
    <thead>
      <tr>
        <th>title</th>
        <th>opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
          <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>